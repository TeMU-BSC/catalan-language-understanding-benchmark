extends layout

block title
  title Datasets - CLUB

block description
  meta(name='description', content='CLUB Dataset sources and information')

block extralinks
  link(rel='stylesheet', href='./stylesheets/index.css')

block extrascripts

mixin fill_text(texts)
    each pair in texts
        div.datasetHolder(id=pair.id)
            h3 #{pair.title}
            p #{pair.text}

block content
  .cover#contentCover
    .container
      .row
        .col-md-15
          .infoCard
            .infoBody
              .infoHeadline
              h2 Datasets
              +fill_text(test1)
