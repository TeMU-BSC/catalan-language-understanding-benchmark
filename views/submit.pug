extends layout

block title
  title Submit - CLUB

block description
  meta(name='description', content='Submitting-related information')

block extralinks
  link(rel='stylesheet', href='./stylesheets/index.css')
  script(src='./javascripts/form.js')
  // link(rel='stylesheet', href='./stylesheets/input.css')

block content
  .cover#contentCover
    .container
      .row
        .infoCard
         .infoBody
            h1 Instructions for submitting
            p To submit data fill the next form:
            br
            form#evaluation_form
                div.form-group
                    label(for='email') Mail:
                    input.form-control(type='email' id='email' name='email' placeholder='example@example.com' required)
                div.form-group
                    label(for='modelName') Model name:
                    input.form-control(type='text' name='modelName' placeholder='Model Name' required)
                div.form-group
                    label(for='researchGroup') Research Group:
                    input.form-control(type='text' id='researchGroup' name='researchGroup' placeholder='e.g: BSC' required)
                div.form-group
                    label(for='paperLink') Paper Link
                    input.form-control(type='url' id='paperLink' name='paperLink' placeholder='Where is the paper (if any)')
                hr
                div.form-group
                    label Upload Test 1
                    input(type='file' name='task1' id='task1')
                div.form-group
                    label Upload Test 2
                    input(type='file' name='task2' id='task2')
                div.form-group
                    label Upload Test 3
                    input(type='file' name='task3' id='task3')
                div.form-group
                    label Upload Test 4
                    input(type='file' name='task4' id='task4')
                div.form-group
                    label Upload Test 5
                    input(type='file' name='task5' id='task5')
                div.form-group
                    label Upload Test 6
                    input(type='file' name='task5' id='task5')
                div.form-group
                    label Upload Test 7
                    input(type='file' name='task5' id='task5')
                hr
                input.submitButton(type='button' value='Submit' onclick="submit_form()")


