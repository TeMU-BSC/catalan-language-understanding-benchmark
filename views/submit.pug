extends layout

block title
  title Submit - CLUB

block description
  meta(name='description', content='Submitting-related information')

block extralinks
  link(rel='stylesheet', href='./stylesheets/index.css')
  script(src='./javascripts/form.js')
  // link(rel='stylesheet', href='./stylesheets/input.css')

block content
  .cover#contentCover
    .container
      .row
        .infoCard
         .infoBody
            h1 Instructions for submitting
            p To submit data fill the next form:
            br
            form#evaluation_form
                div.form-group
                    label(for='email') Mail:
                    input.form-control(type='email' id='email' name='email' placeholder='example@example.com' required)
                div.form-group
                    label(for='modelName') Model name:
                    input.form-control(type='text' name='modelName' placeholder='Model Name' required)
                div.form-group
                    label(for='researchGroup') Research Group:
                    input.form-control(type='text' id='researchGroup' name='researchGroup' placeholder='e.g: BSC' required)
                div.form-group
                    label(for='paperLink') Paper Link
                    input.form-control(type='url' id='paperLink' name='paperLink' placeholder='Where is the paper (if any)' required)
                hr
                div.form-group
                    label Upload STS_ca
                    input(type='file' name='STS_ca' id='STS_ca' required)
                div.form-group
                    label Upload POS
                    input(type='file' name='POS' id='POS' required)
                div.form-group
                    label Upload VilaQuAD
                    input(type='file' name='VilaQuAD' id='VilaQuAD' required)
                div.form-group
                    label Upload ViquiQuAD
                    input(type='file' name='ViquiQuAD' id='ViquiQuAD' required)
                div.form-group
                    label Upload XQuAD_ca
                    input(type='file' name='XQuAD' id='XQuAD' required)
                div.form-group
                    label Upload TeCla
                    input(type='file' name='TeCla' id='TeCla' required)
                div.form-group
                    label Upload TECa
                    input(type='file' name='TECa' id='TECa' required)
                div.form-group
                    label Upload AnCora
                    input(type='file' name='AnCora' id='AnCora' required)
                hr
                input.submitButton(type='button' value='Submit' onclick="submit_form()")


