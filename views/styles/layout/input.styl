.fileLabel
    margin 10px 0
    width 15%
    background-color $theme-color
    color #fff !important
    text-align center
    border 2px solid $theme-color
    padding 10px
    border-radius 25px
    transition all .5s

.fileLabel:hover
    background-color $theme-color-dark
    border-color $theme-color-dark

.hidden
    display none

.submitButton
    width 15%
    background-color #5353ff
    color #000 !important
    text-align center
    border 2px solid #5353ff
    padding 15px
    border-radius 30px
    transition all .5s
    
.submitButton:hover
    background-color $theme-color-dark
    border-color $theme-color-dark
