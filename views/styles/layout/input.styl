.fileLabel
    margin 10px 0
    width 15%
    background-color $theme-color
    color #fff !important
    text-align center
    border 2px solid $theme-color
    padding 10px
    border-radius 25px
    transition all .5s

.fileLabel:hover
    background-color $theme-color-dark
    border-color $theme-color-dark

.hidden
    display none

.submitButton
    width 20%
    background-color #FFCE2D
    color #000
    text-align center
    border 2px solid #FFCE2D
    padding 15px
    border-radius 30px
    transition all .5s
    min-width 75px
    
.submitButton:hover
    background-color #E40520
    border-color #E40520
    color #fff

@media(max-width: 734px)
	.submitButton
		width 100%

#submitResults
	text-align right
